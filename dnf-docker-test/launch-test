#!/bin/bash
set -xeuo pipefail

httpd -k start
vsftpd
new_name=${1}-${2}
EXIT_STATUS=0
cp /tests/${1}.feature /behave/${new_name}.feature || EXIT_STATUS=1
if [ "$EXIT_STATUS" = 1 ]; then
    >&2 echo "Feature file ${1}.feature not found"
    exit 1
fi
behave-2 -i $new_name -D dnf_cmd=$2 --junit --junit-directory /junit/ /behave/
